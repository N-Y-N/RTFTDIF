<UserControl x:Class="RTFTDIF.Client.Metro.Views.ButtonWithSortIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RTFTDIF.Client.Metro"
             xmlns:views="clr-namespace:RTFTDIF.Client.Metro.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Padding="10" FontSize="25" Style="{DynamicResource AccentedSquareButtonStyle}" FontFamily="{StaticResource JosefinSansLight}" >
        <StackPanel Orientation="Horizontal" >
            <Label Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type views:ButtonWithSortIndicator}}, Path=Text}"></Label>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" >
                <Label Padding="0" FontFamily="{StaticResource FontAwesome}" FontSize="10">&#xf062;</Label>
                <Label Padding="0" FontFamily="{StaticResource FontAwesome}" FontSize="10" Foreground="{StaticResource AccentColorBrush}">&#xf063;</Label>
            </StackPanel>
        </StackPanel>
    </Button>
</UserControl>
