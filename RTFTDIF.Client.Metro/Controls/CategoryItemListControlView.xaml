<UserControl x:Class="RTFTDIF.Client.Metro.Views.CategoryItemListControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:RTFTDIF.Client.Metro.Views"
             xmlns:viewModels="clr-namespace:RTFTDIF.ViewModels;assembly=RTFTDIF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="450">
    <Grid >
        <ScrollViewer Padding="0,0,0,0" Margin="0,0,-5,0">
                <ItemsControl ItemsSource="{Binding List}" Margin="0" Padding="0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <views:CategoryItemControlView></views:CategoryItemControlView>
                            
                        </DataTemplate>
                        
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
    </Grid>
</UserControl>
