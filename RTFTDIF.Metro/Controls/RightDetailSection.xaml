                        <DataTemplate>
                            <local:ItemControl></local:ItemControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>-->
            <Rectangle Grid.Row="1" Grid.Column="6" Fill="{StaticResource AccentColorBrush4}" Drop="Rectangle_Drop" AllowDrop="True"/>
        </Grid>
