<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:RTFTDIF.Metro.Styles">

    <FontFamily x:Key="BoostLightSSK">pack://application;,,,/Resources/Fonts/#BoostLightSSK</FontFamily>
    <FontFamily x:Key="JosefinSansLight">pack://application;,,,/Resources/Fonts/#Josefin Sans Light</FontFamily>
    <FontFamily x:Key="JosefinSansRegular">pack://application;,,,/Resources/Fonts/#Josefin Sans Regular</FontFamily>
    <FontFamily x:Key="FontAwesome">pack://application;,,,/Resources/Fonts/#Font Awesome 5 Free Solid</FontFamily>


    <Style x:Key="BaseStyleFont" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="{StaticResource JosefinSansRegular}"></Setter>
        <Setter Property="FontSize" Value="25"></Setter>
    </Style>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyleFont}"></Style>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyleFont}"></Style>
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseStyleFont}"></Style>
</ResourceDictionary>